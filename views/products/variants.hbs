<h1> Variant</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cost</th>
            <th>Stock</th>
            <th>Colors Type</th>
            <th>Size</th>
            
        </tr>
    </thead>
    <tbody>test here var
        {{#each variants}}
            <tr>
              <td>
                    {{this.id}}
              </td>
              <td>
                    {{this.cost}} 
              </td>
               <td>
                    {{this.stock}} 
              </td>
